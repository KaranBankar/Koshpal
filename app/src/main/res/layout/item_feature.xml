<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardFeature"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivFeatureIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_category_default"
            android:tint="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvFeatureTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feature Title"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvFeatureDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feature description"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:alpha="0.8"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
