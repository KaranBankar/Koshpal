<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/universe_background">

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Section with Liquid Progress -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/heroSection"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/hero_gradient_background"
                    android:padding="24dp">

                    <!-- Remaining Budget Display -->
                    <TextView
                        android:id="@+id/tvRemainingBudgetLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remaining This Month"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:alpha="0.8" />

                    <TextView
                        android:id="@+id/tvRemainingBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹15,420"
                        android:textColor="@android:color/white"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <!-- Budget Health Score -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tvHealthScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excellent"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvMonthProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18 days left"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:alpha="0.8" />

                    </LinearLayout>

                    <!-- Liquid Progress Bar -->
                    <com.koshpal_android.koshpalapp.ui.budget.custom.LiquidProgressView
                        android:id="@+id/liquidProgress"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        app:liquidColor="@color/liquid_progress_excellent"
                        app:backgroundColor="@color/universe_orbit_line"
                        app:cornerRadius="12dp"
                        app:animationDuration="2000"
                        app:waveAmplitude="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Financial Universe Visualization -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/universeCard"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/universe_gradient_background">

                    <com.koshpal_android.koshpalapp.ui.budget.custom.FinancialUniverseView
                        android:id="@+id/financialUniverse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Universe Controls -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_margin="16dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnUniverseReset"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_button_background"
                            android:src="@drawable/ic_refresh"
                            android:tint="@android:color/white"
                            android:contentDescription="Reset view" />

                        <ImageButton
                            android:id="@+id/btnUniverseSettings"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/circle_button_background"
                            android:src="@drawable/ic_settings"
                            android:tint="@android:color/white"
                            android:contentDescription="Universe settings" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tier Breakdown Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget Breakdown"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Essentials Tier -->
                <com.koshpal_android.koshpalapp.ui.budget.custom.TierCard
                    android:id="@+id/essentialsTier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:tierType="essentials"
                    app:tierPercentage="50"
                    app:tierTitle="Essentials"
                    app:tierDescription="Rent, groceries, utilities, transport" />

                <!-- Wants Tier -->
                <com.koshpal_android.koshpalapp.ui.budget.custom.TierCard
                    android:id="@+id/wantsTier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:tierType="wants"
                    app:tierPercentage="30"
                    app:tierTitle="Wants"
                    app:tierDescription="Entertainment, dining, shopping, hobbies" />

                <!-- Goals Tier -->
                <com.koshpal_android.koshpalapp.ui.budget.custom.TierCard
                    android:id="@+id/goalsTier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:tierType="goals"
                    app:tierPercentage="20"
                    app:tierTitle="Goals"
                    app:tierDescription="Savings, investments, debt repayment" />

            </LinearLayout>

            <!-- Smart Insights Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/insightsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/insight_neutral">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_insights_brain"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Smart Insights"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/btnExpandInsights"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_down"
                            android:tint="@android:color/white" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvInsights"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        tools:listitem="@layout/item_smart_insight" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- What-If Scenario Planner -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/scenarioCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/tier_wants_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_scenario_crystal_ball"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="What-If Planner"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStartScenario"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Try Scenario"
                            android:textSize="12sp"
                            app:backgroundTint="@android:color/white"
                            app:cornerRadius="18dp"
                            android:textColor="@color/tier_wants_primary" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Explore how changes to your budget would affect your financial goals"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:alpha="0.9" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Subscription Auto-Detection -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/subscriptionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/tier_essentials_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_subscription_radar"
                            android:tint="@android:color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Subscription Tracker"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSubscriptionCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 active"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:alpha="0.8" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSubscriptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_detected_subscription" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for Quick Expense Entry -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabQuickExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Add Expense"
        app:icon="@drawable/ic_add_expense"
        app:backgroundTint="@color/tier_wants_primary"
        app:iconTint="@android:color/white"
        android:textColor="@android:color/white" />

    <!-- Category Drill-Down Bottom Sheet -->
    <include
        android:id="@+id/categoryDrillDown"
        layout="@layout/bottom_sheet_category_drill_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Quick Expense Entry Modal -->
    <include
        android:id="@+id/quickExpenseModal"
        layout="@layout/modal_quick_expense_entry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- What-If Scenario Modal -->
    <include
        android:id="@+id/scenarioModal"
        layout="@layout/modal_what_if_scenario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
