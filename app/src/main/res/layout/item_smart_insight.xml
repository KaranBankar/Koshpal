<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivInsightIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_insights_brain"
        android:tint="@android:color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvInsightTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart Insight Title"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInsightDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insight description goes here"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.8"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvInsightPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIGH"
        android:textColor="@color/urgency_high"
        android:textSize="10sp"
        android:textStyle="bold"
        android:background="@drawable/circle_button_background"
        android:padding="4dp" />

</LinearLayout>
