<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Priority Indicator -->
        <View
            android:id="@+id/viewPriorityIndicator"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/primary" />

        <!-- Recommendation Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRecommendationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Increase Savings"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvRecommendationDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try to save at least 10% of your income each month"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Action Button -->
        <ImageButton
            android:id="@+id/btnRecommendationAction"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="View recommendation details" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
